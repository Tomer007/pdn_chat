    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask App (app.py)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Flask App (run.py)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        }
    ]
}
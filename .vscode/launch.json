    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8001"
            ],
            "python": "/opt/homebrew/opt/chat_bot/bin/python3",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:/opt/homebrew/opt/chat_bot/lib/python3.9/site-packages"
            }
        }
    ]
}